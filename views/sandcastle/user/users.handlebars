<div class="container table-responsive edit-table">
  <h1>Manage Users</h1>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>User</th>
        <th>Admin</th>
        <th>Can Edit</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody></tbody>
    {{#each users}}
      <tr>
        <td>{{{this.email}}}</td>
        <td>{{{this.isAdmin}}}</td>
        <td>{{{this.canEdit}}}</td>
        <td><a href="edit/{{this.id}}" type="button" class="btn btn-warning">Edit</a></td>
        <td><a onclick="deleteUser(&quot;{{this.id}}&quot;)" type="button" class="btn btn-danger">Delete</a></td>
      </tr>
    {{/each}}
    </each>
  </table>
</div>