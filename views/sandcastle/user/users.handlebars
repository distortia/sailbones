<section id="form-wrapper">
    <div id="form-card">
        <h2>Manage Users</h2>
        <div class="flash-message">{{session.flash.UserMessage}}</div>
        <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
            <thead>
                <tr>
                    <th class="mdl-data-table__cell--non-numeric">User</th>
                    <th class="mdl-data-table__cell--non-numeric">Admin</th>
                    <th class="mdl-data-table__cell--non-numeric">Can Edit</th>
                    <th class="mdl-data-table__cell--non-numeric"></th>
                    <th class="mdl-data-table__cell--non-numeric"></th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td class="mdl-data-table__cell--non-numeric users-cell">{{{this.email}}}</td>
                    <td class="mdl-data-table__cell--non-numeric users-cell">{{{this.isAdmin}}}</td>
                    <td class="mdl-data-table__cell--non-numeric users-cell">{{{this.canEdit}}}</td>
                    <td class="mdl-data-table__cell--non-numeric users-cell"><a href="edit/{{this.id}}">Edit</a></td>
                    <td class="mdl-data-table__cell--non-numeric users-cell"><button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" onclick="deleteUser(&quot;{{this.id}}&quot;)" type="button">Delete</input></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</section>