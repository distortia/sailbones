<div class="container">
  <form action="/sandcastle/user/login" method="post" class="form-signin col-md-3">
    <h2 class="form-signin-heading">Login!</h2>
    <div class="form-group">
      <input type="text" name="email" placeholder="Email address" class="form-control" id="email"/>
    </div>
    <div class="form-group">
      <input type="password" name="password" placeholder="Password" class="form-control" id="password"/>
    </div>
    <button type="submit" class="btn btn-large btn-primary" id="btn_login">Login</button><br/><a href="/sandcastle/user/reset">Reset Password</a>
  </form>
</div>
